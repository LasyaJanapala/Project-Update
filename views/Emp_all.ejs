<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Employees</title>
    <link rel="stylesheet" href="/path/to/your/css/style.css"> <!-- Ensure this path is correct -->
    <style>
        /* Add your CSS styles here */
        .employee-card {
            border: 1px solid #ddd;
            padding: 10px;
            margin: 10px;
            border-radius: 5px;
            display: inline-block;
            width: 200px;
            text-align: center;
        }

        .employee-photo {
            width: 100px;
            height: 100px;
            object-fit: cover;
            border-radius: 50%;
        }
    </style>
</head>

<body>
    <div class="container">
        <header>
            <h1>All Employees</h1>
        </header>
        <section class="employee-list">
            <div class="row">
                <% if (employees.length===0) { %>
                    <p>No employees found.</p>
                    <% } else { %>
                        <% employees.forEach((employee)=> { %>
                            <div class="employee-card">
                                <img src="<%= employee.Image %>" alt="<%= employee.Name %> Photo"
                                    class="employee-photo">
                                <div class="employee-details">
                                    <p><strong>Person Number:</strong>
                                        <%= employee.PersonNumber %>
                                    </p>
                                    <p><strong>Name:</strong>
                                        <%= employee.Name %>
                                    </p>
                                </div>
                            </div>
                            <% }); %>
                                <% } %>
            </div>
        </section>
    </div>
</body>

</html>